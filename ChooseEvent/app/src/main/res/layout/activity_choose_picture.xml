<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosePicture">

    <ImageButton
        android:id="@+id/btnAddEvents"
        style="@android:style/Widget.ImageButton"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnListEvents"
        app:layout_constraintTop_toTopOf="@+id/btnListEvents"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/btnListEvents"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="List Events"
        app:layout_constraintEnd_toStartOf="@+id/btnAddEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListcontact" />

    <ImageView
        android:id="@+id/imgV"
        android:layout_width="323dp"
        android:layout_height="319dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnListcontact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/btnListcontact"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="List Contacts"
        app:layout_constraintBottom_toTopOf="@+id/btnListEvents"
        app:layout_constraintEnd_toStartOf="@+id/btnAddContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgV" />

    <ImageButton
        android:id="@+id/btnAddContact"
        style="@android:style/Widget.ImageButton"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toTopOf="@+id/btnAddEvents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnListcontact"
        app:layout_constraintTop_toBottomOf="@+id/imgV"
        app:srcCompat="@android:drawable/ic_input_add" />



</android.support.constraint.ConstraintLayout>